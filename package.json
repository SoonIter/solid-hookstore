{
  "name": "@solid-hookstore/monorepo",
  "private": true,
  "version": "0.0.4",
  "packageManager": "pnpm@7.5.0",
  "description": "solid-hookstore monorepo template",
  "author": {
    "name": "SoonIter",
    "email": "1730214056@qq.com"
  },
  "license": "MIT",
  "repository": "https://github.com/SoonIter/solid-hookstore",
  "bugs": {
    "url": "https://github.com/SoonIter/solid-hookstore/issues"
  },
  "keywords": [
    "solid-js",
    "hooks"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "unpkg": "./dist/index.glob.min.js",
  "jsdelivr": "./dist/index.glob.min.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm --filter=!./packages/playground build",
    "release": "nr build && npx bumpp patch --commit 'ðŸ”–v'",
    "ci": "nr lint:fix && nr test:once",
    "test": "vitest",
    "test:once": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint ./packages/**/*.ts",
    "lint:fix": "nr lint --fix",
    "generate": "soon glob ./packages/hooks/use*/index.ts ./packages/basic/index.ts"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "solid-js": "^1.5.1"
  },
  "devDependencies": {
    "@antfu/ni": "^0.17.2",
    "@changesets/cli": "^2.24.4",
    "@typescript-eslint/parser": "^5.35.1",
    "@vitest/ui": "^0.22.0",
    "bumpp": "^8.2.1",
    "c8": "^7.12.0",
    "eslint": "^8.22.0",
    "eslint-plugin-solid": "~0.7.1",
    "fast-glob": "^3.2.11",
    "happy-dom": "^6.0.4",
    "lint-staged": "13.0.3",
    "simple-git-hooks": "^2.8.0",
    "soon-cli": "1.1.9",
    "tsup": "^6.2.2",
    "typescript": "^4.7.4",
    "vite": "^3.0.8",
    "vitest": "^0.22.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
